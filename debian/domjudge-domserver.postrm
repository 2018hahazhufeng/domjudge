#! /bin/sh -e

if [ "$1" = "purge" ]; then
	if [ -x /usr/bin/dj-setup-database ]; then
		dj-setup-database -r uninstall || true
	fi
	# do not purge entire /v/l/domjudge, because domjudge-judgehost
	# may still remain installed
	rm -rf /var/lib/domjudge/submissions /var/log/domjudge/images
fi

#DEBHELPER#

exit 0
