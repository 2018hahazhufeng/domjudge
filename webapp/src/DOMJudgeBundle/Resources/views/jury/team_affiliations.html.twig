{% extends "@DOMJudge/jury/base.html.twig" %}
{% import _self as self %}
{% import "@DOMJudge/jury/jury_macros.twig" as macros %}

{% block title %}Affiliations - {{ parent() }}{% endblock %}

{% block extrahead %}
    {{ parent() }}
    {{ macros.table_extrahead() }}
{% endblock %}

{% block content %}

    <h1>Affiliations</h1>

    {{ macros.table(team_affiliations, table_fields, num_actions) }}

    {% if is_granted('ROLE_ADMIN') %}
        <p>
            {{ button(path('legacy.jury_team_affiliation', {cmd: 'add', referrer: 'affiliations'}), 'Add new affiliation', 'primary', 'plus') }}
        </p>
    {% endif %}

{% endblock %}
