<div class="row">
    <div class="col-lg-4">
        {{ form_start(form) }}
        {% if form.offsetExists('username') %}
            {{ form_row(form.username) }}
        {% endif %}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        <div class="form-group">
            {{ form_label(form.plainPassword) }}
            {{ form_widget(form.plainPassword) }}
            <small class="form-text text-muted">
                Currently {% if user.password %}set{% else %}not set{% endif %} - fill to change
            </small>
        </div>
        {{ form_row(form.ipAddress) }}
        {{ form_row(form.enabled) }}
        {{ form_row(form.team) }}
        {{ form_row(form.roles) }}
        {{ form_end(form) }}
    </div>
</div>
